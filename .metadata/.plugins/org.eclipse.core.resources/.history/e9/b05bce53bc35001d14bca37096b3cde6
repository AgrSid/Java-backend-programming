package add1.java;

public class Pyramid {
public static void main(String []args) {
	int n=4;
	py(n);
}
public static void py(int k) {
	for (int i=0;i<=k;i++) {
		for (int j=k-i;j>1;j--)
		{
			System.out.print(" ");
			
		}
		for(int j=0;j<=i;j++) {
			System.out.print("*");
		}
	System.out.println("");
}
}
}
